<table border="1">
  <thead>
    <tr>
      <th>Date</th>

      <% @scopes.each do |scope| %>
      <th><%= scope.name %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @datapoints.each do |date, values| %>
    <tr>
      <td><%= date %></td>
      <% @scopes.each do |scope| %>
      <td><%= values.first[scope.id.to_s] %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

